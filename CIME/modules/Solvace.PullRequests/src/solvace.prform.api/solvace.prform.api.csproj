        <MSBuild Projects="..\..\..\Solvace.GitHub\src\solvace.github.application\solvace.github.application.csproj" />
        <MSBuild Projects="..\..\..\Solvace.AI\src\solvace.ai.domain\solvace.ai.domain.csproj" />
        <MSBuild Projects="..\..\..\Solvace.AI\src\solvace.ai.application\solvace.ai.application.csproj" />
    </Target>
</Project>
